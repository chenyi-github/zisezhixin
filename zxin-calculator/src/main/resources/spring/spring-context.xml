    <!-- 开发环境配置文件 -->  
    <beans profile="dev">  
        <context:property-placeholder location="classpath:config/config-dev.properties"/>  
    </beans>  
    
    <!-- 测试环境配置文件 -->  
    <beans profile="test">  
        <context:property-placeholder location="classpath:config/config-test.properties"/>  
    </beans>  
       
    <!-- 生产环境配置文件 -->  
    <beans profile="pro">  
        <context:property-placeholder location="classpath:config/config-pro.properties"/>  
